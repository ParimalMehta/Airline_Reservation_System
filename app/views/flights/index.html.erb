<p id="notice"><%= notice %></p>



<h1>Upcoming Flights</h1>

<table>
  <thead>
  <tr>
    <th>Flight number</th>
    <th>Origin airport</th>
    <th>Destination airport</th>
    <th>Departure date</th>
    <th>Departure time</th>
    <th>Flight capacity</th>
    <th>Flight price</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>

  <% @flights.each do |flight| %>
    <% if flight.departure_date > Date.today %>
      <tr>
        <td><%= flight.flight_number %></td>
        <td><%= flight.origin_airport %></td>
        <td><%= flight.destination_airport %></td>
        <td><%= flight.departure_date %></td>
        <td><%= flight.departure_time.strftime("%H:%M") %></td>
        <td><%= flight.flight_capacity %></td>
        <td><%= flight.flight_price %></td>
        <td><%= link_to 'View Reservations', reservations_path(:flight_id => flight.id) %></td>
        <td><%= link_to 'Book', new_reservation_path(:flight_id => flight.id, :user_id => current_user.id) %></td>
    <%end %>
  <%end %>
  </tbody>
</table>


